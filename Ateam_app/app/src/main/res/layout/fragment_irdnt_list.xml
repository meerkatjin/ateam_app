<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".irdnt_list_package.fragment.IrdntListFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/irdnt_sort_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabIndicatorColor="#000000"
                app:tabTextColor="#000000"
                app:tabSelectedTextColor="#000000"
                android:elevation="1dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/cafe24ssurroundair"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/irdnt_sort_type_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable"
                app:tabGravity="fill"
                app:tabIndicatorColor="#000000"
                app:tabTextColor="#000000"
                app:tabSelectedTextColor="#000000"
                app:tabIconTint="@color/black"
                android:elevation="1dp"
                android:visibility="gone"
                android:background="#FFFFFF"
                android:fontFamily="@font/cafe24ssurroundair"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/irdnt_check_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                android:elevation="1dp"/>

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:id="@+id/irdnt_list_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnInputTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="5dp"
                android:src="@android:drawable/ic_input_add"
                android:backgroundTint="#64B5F6"
                android:visibility="visible"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/irdntRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                />

            <FrameLayout
                android:id="@+id/irdnt_input_frame"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:background="#B364B5F6"
                android:layout_gravity="center"
                android:padding="10dp"
                android:visibility="gone"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="재료명"
                            android:textColor="#000000"
                            android:layout_weight="1"
                            android:gravity="center"/>

                        <EditText
                            android:id="@+id/content_nm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnIrdntInsert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="추가"
                            android:layout_marginRight="10dp"/>

                        <Button
                            android:id="@+id/btnIrdntCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="취소"/>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>